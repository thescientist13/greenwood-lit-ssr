{
  "name": "greenwood-demo-adapter-vercel",
  "version": "1.0.0",
  "description": "A demonstration repo for deploying a full-stack Greenwood app with Lit SSR, Vercel static hosting and Serverless + Edge functions",
  "homepage": "https://github.com/ProjectEvergreen/greenwood-lit-ssr#readme",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thescientist13/greenwood-lit-ssr.git"
  },
  "keywords": [
    "Greenwood",
    "Vercel",
    "Web Components",
    "Serverless",
    "Edge",
    "SSR",
    "Lit"
  ],
  "scripts": {
    "clean": "rimraf public .greenwood .vercel",
    "dev": "node --import @greenwood/cli/register ./node_modules/@greenwood/cli/src/index.js develop",
    "build": "node --import @greenwood/cli/register ./node_modules/@greenwood/cli/src/index.js build",
    "serve": "pnpm run clean && pnpm run build && node --import @greenwood/cli/register ./node_modules/@greenwood/cli/src/index.js serve",
    "start": "pnpm run serve"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.19.1",
    "@spectrum-css/card": "^9.3.0",
    "@spectrum-css/tokens": "^14.6.0",
    "@spectrum-web-components/action-menu": "^1.0.1",
    "@spectrum-web-components/button": "^1.0.1",
    "@spectrum-web-components/menu": "^1.0.1",
    "@spectrum-web-components/shared": "^1.0.1",
    "@spectrum-web-components/styles": "^1.0.1",
    "@spectrum-web-components/theme": "^1.0.1",
    "@spectrum-web-components/top-nav": "^1.0.1",
    "@uswds/web-components": "^0.0.1-alpha",
    "lit": "^3.2.1",
    "signal-polyfill": "^0.2.2",
    "signal-utils": "^0.21.1"
  },
  "devDependencies": {
    "@greenwood/cli": "~0.31.0-alpha.5",
    "@greenwood/plugin-adapter-vercel": "~0.31.0-alpha.5",
    "@greenwood/plugin-renderer-lit": "~0.31.0-alpha.5",
    "@greenwood/plugin-typescript": "~0.31.0-alpha.5",
    "rimraf": "^6.0.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "@greenwood/cli": "patches/@greenwood__cli.patch"
    }
  }
}
