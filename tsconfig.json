{
  "compilerOptions": {
    "target": "es2022",
    "module": "preserve",
    "lib": ["es2022", "DOM", "DOM.Iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "checkJs": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}